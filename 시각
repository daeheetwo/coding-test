n = int(input())
three = 0

if (n<3):
    three = 1575 * n

elif (3<=n<13):
    three = 1575 * n + 3600

elif (13<=n<23):
    three = 1575 * n + 7200
elif (n == 23):
    three = 1575*n+10800


print(three)


--------------------------------------

n = int(input())
three = 0

for i in range(n+1):
    for j in range(60):
        for k in range(60):
            if "3" in str(i) + str(j) + str(k):
                three = three + 1

print(three)
